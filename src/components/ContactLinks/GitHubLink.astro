        </defs>
        <path
            id="StandardFill"
            class="GitHubFill"
            style="stroke-width:30.9489994;stroke-opacity:1"
            pathLength="1"
            d="M 49,85.675481 C 30.613124,85.885944 6.9421604,67.45184 7.0660845,49.119296 7.1900086,30.786752 30.831236,13.330951 49,13.538259 67.168764,13.745568 88.907387,31.256647 89.028794,49.119296 89.150201,66.981945 67.386875,85.465019 49,85.675481 Z"
