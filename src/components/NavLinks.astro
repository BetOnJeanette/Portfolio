---
interface Props {
    label: string;
    dest: string;
    emphasized?: boolean;
}

const { label, dest, emphasized = false } = Astro.props;
---

<li class="Destination">
    <a href={dest}>
        <b><p class={emphasized ? "EmphasizedLinkButton" : "LinkButton"}>{ label }</p></b>
    </a>
</li>
<style>
    .Destination {
        list-style-type: none;
        padding: 0 4px;
    }
    .LinkButton, .EmphasizedLinkButton{
        margin: 0;
        padding: 8px;
        border-width: 4px;
        border-style: solid;
        border-radius: 8px;
        border-color: black;
        text-decoration: none;
    }
    a {
        text-decoration: none;    
    }
    .LinkButton {
        color: black;
        background-color: var(--highlight-purple);
    }
    .EmphasizedLinkButton {
        background-color: black;
        color: var(--highlight-purple);
    }

    @media screen and (max-width: 480px) {
        .LinkButton {
            display: none;
        }
    }
</style>