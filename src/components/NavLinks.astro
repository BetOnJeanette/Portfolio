---
interface Props {
    label: string;
    dest: string;
    inverted?: boolean;
}

const { label, dest, inverted = false } = Astro.props;
---

<li class="Destination">
    <a href={dest}>
        <b><p class={inverted ? "InvertedLinkButton" : "LinkButton"}>{ label }</p></b>
    </a>
</li>
<style>
    .Destination {
        list-style-type: none;
        padding: 0 4px;
    }
    .LinkButton, .InvertedLinkButton{
        margin: 0;
        padding: 8px;
        border-width: 4px;
        border-style: solid;
        border-radius: 8px;
        border-color: black;
        text-decoration: none;
    }
    a {
        text-decoration: none;    
    }
    .LinkButton {
        color: black;
        background-color: var(--highlight-purple);
    }
    .InvertedLinkButton {
        background-color: black;
        color: var(--highlight-purple);
    }
</style>