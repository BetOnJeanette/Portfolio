---
interface Props {
    iconPath?: string;
}

import NavLinks from "./NavLinks.astro";

const { iconPath } = Astro.props;
---

<nav>
    <b><img src={iconPath} alt="Jeanette Crull" /></b>
    <ul class="DestOpts">
        <NavLinks dest="#About" label="About" />
        <NavLinks dest="#ProfessionalExperience" label="Experience" />
        <NavLinks dest="#Projects" label="Projects" />
        <NavLinks dest="#ContactInfo" label="Contact" inverted={true}/>
    </ul>
</nav>

<style>
    nav {
        background-color: var(--highlight-purple);
        display:flex;
        align-items: baseline;
        justify-content: space-around;
        border-radius: 0 0 4px 4px;
        width: 100%;
        position: sticky;
        top: 0;
        z-index: 3;
    }
    .DestOpts{
        justify-content: right;
        width: min-content;
        display: flex;
        white-space: nowrap;
        padding: 0;
        min-width: 70%;
    }
</style>