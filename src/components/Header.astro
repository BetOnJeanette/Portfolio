---
import "../styles/colorPalette.css"
const columnCount = 16;
---
<div id="Header">
    <div x-data=`{get cellCount() { return ${ columnCount } * Math.ceil(window.innerHeight * ${ columnCount } / window.innerWidth)}}` class="HeaderBackground">
        <template x-for="i in cellCount">
            <div class="GridCell">
                <div class="GridCellVisible"></div>
            </div>
        </template>
    </div>
    <h1 id="Name">Jeanette Crull</h1>
</div>

<style define:vars={{columnCount}}>
    #Header {
        height: 100vh;
        display: flex;
    }
    .HeaderBackground{
        width: 100vw;
        height: 100vh;
        position: absolute;
        overflow: hidden;
        left: 0;
        display: grid;
        grid-template-columns: repeat(var(--columnCount), 1fr);
        gap: 4px;
    }
    .GridCellVisible {
        background-color: var(--highlight-purple);
        width: 100%;
        max-height: 100%;
        transition: max-height .125s ease-in;
        border-radius: 5px;
    }
    .GridCell:hover .GridCellVisible{
        max-height: 0;
    }
    .GridCell {
        display: flex;
        aspect-ratio: 1 / 1;
        width: 100%;
        justify-content: center;
        align-content: center;

    }
    #Name {
        display: flex;
        align-items: baseline;
        justify-content: center;
        z-index: 2;
        position: relative;
        float: right;
    }
</style>
